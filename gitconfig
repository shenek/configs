	gpgsign = True
	verbose = true

[diff "odf"]
	textconv=odt2txt

[diff "fodf"]
	textconv=odt2txt --raw-input

[log]
	decorate = full

[gpg]
	program = /usr/bin/gpg2
[diff]
	indentHeuristic = true
[alias]
	graph = log --graph --oneline --all
	versiontag = "! awk '/'$(git describe --tags --abbrev=0 | sed -e 's/^v//' -e 's/^package-v//')' / { exit } {print $0 }' CHANGELOG.rst | git tag -s -F -"
