[diff]
	indentHeuristic = true
[alias]
	graph = log --graph --oneline --all
	versiontag = "! cat CHANGELOG.rst CHANGELOG.md 2>/dev/null | awk '/^'$(git describe --tags --abbrev=0 | sed -e 's/^v//' -e 's/^package-v//' || echo EOF)' / { exit } { print $0 }' | git tag -s -F -"
